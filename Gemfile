source 'http://rubygems.org'

group :jekyll_plugins do
  gem 'jekyll'
  gem 'jekyll-paginate'
  gem 'jekyll-gist'
  gem 'jekyll-watch'
  gem 'kramdown'
  gem 'rouge'
  gem 'jekyll-sitemap'
end

gem 'github-pages', group: :jekyll_plugins  # Use 'github-pages' gem for GitHub Pages compatibility
gem 'rdiscount'  # Add 'rdiscount' gem for Markdown processing
gem 'public_suffix', '4.0.7'  # Add 'public_suffix' gem with version 4.0.7
# gem 'wdm', '>= 0.1.0', platforms: [:x64_mingw, :mingw, :mswin]  # Add 'wdm' gem for Windows platform
gem "webrick", "~> 1.8"  # Add 'webrick' gem with version 1.8 for local development server
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw]  # Add 'tzinfo-data' gem for time zone data on Windows platforms
